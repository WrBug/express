<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@color/colorAccent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userIcoImg"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="50dp"
            android:src="@drawable/ic_user_default_man"
            app:civ_border_color="@color/app_main"
            app:civ_border_width="2dp" />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_clock_white" />

        <ImageView
            android:id="@+id/image3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignLeft="@+id/image2"
            android:layout_alignStart="@+id/image2"
            android:layout_below="@+id/image2"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_express_car_white" />

        <TextView
            android:id="@+id/dateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image2"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/image2"
            android:layout_toRightOf="@+id/image2"
            android:text="2016-1-30"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/companyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image3"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/image3"
            android:layout_toRightOf="@+id/image3"
            android:text="顺丰快递"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/image4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/image3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_attention_white" />

        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/image4"
            android:layout_toEndOf="@+id/image4"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/image4"
            android:textColor="@android:color/white"
            android:text="待接取" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:src="@drawable/ic_location_white" />

        <TextView
            android:id="@+id/whereText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@+id/image"
            android:layout_toRightOf="@+id/image1"
            android:layout_toStartOf="@+id/image"
            android:singleLine="true"
            android:text="生活区5号楼"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_location_white" />

        <TextView
            android:id="@+id/destText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/whereText"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/image"
            android:layout_toRightOf="@+id/image"
            android:singleLine="true"
            android:text="生活区12号楼"
            android:textColor="@android:color/white" />
    </RelativeLayout>
</LinearLayout>